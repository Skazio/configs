{
  /* General */
  "telemetry.enableTelemetry": false,
  "workbench.startupEditor": "none",
  "explorer.compactFolders": false,
  "terminal.external.linuxExec": "fish",
  "terminal.integrated.fontFamily": "SauceCodePro NF",

  /* Editor */
  "breadcrumbs.enabled": false,
  "files.autoSave": "onFocusChange",
  "editor.tabSize": 2,
  "editor.fontSize": 16,
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": "active",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.showFoldingControls": "always",

  /* Git */
  "diffEditor.ignoreTrimWhitespace": false,
  
  /* Vim */
  "vim.history": 900,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "underline",
  "vim.cursorStylePerMode.visual": "line",
  "vim.cursorStylePerMode.visualblock": "block",
  "vim.cursorStylePerMode.visualline": "underline-thin",
  "vim.highlightedyank.enable": true,
  "vim.camelCaseMotion.enable": true,
  "vim.useSystemClipboard": true,
  "vim.leader": " ",
  // Plugins
  "vim.foldfix": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.easymotion": true,
  "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
  // Keys
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-c>": false,
    "<C-d>": false,
    "<C-f>": false,
    "<S-C-f>": false,
  },
  "vim.normalModeKeyBindings": [
    {
      "before": ["<tab>"],
      "commands": ["editor.action.indentLines"],
    },
    {
      "before": ["<S-tab>"],
      "commands": ["editor.action.outdentLines"],
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"],
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"],
    },
    // Replace with vscode's undo / redo system
    {
      "before": ["u"],
      "commands": ["undo"],
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"],
    },
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<tab>"],
      "commands": ["editor.action.indentLines"],
    },
    {
      "before": ["<S-tab>"],
      "commands": ["editor.action.outdentLines"],
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"],
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"],
    },
    {
      "before": ["<C-d>"],
      "commands": ["editor.action.addSelectionToNextFindMatch"],
    },
  ],
  "vim.commandLineModeKeyBindingsNonRecursive": [
    // Press ':' then "Ctrl+Q" to close other tabs
    {
      "before": ["<C-q>"],
      "commands": ["workbench.action.closeOtherEditors"],
    },
  ],

  /* Languages */
  "javascript.updateImportsOnFileMove.enabled": "always",

  /* Extensions */
  // Jest
  "jest.autoRun": {
    "watch": false,
  },
  "jest.coverageColors": {
    "covered": "rgba(9, 156, 65, 0.4)",
    "uncovered": "rgba(121, 31, 10, 0.4)",
    "partially-covered": "rgba(235, 198, 52, 0.4)",
  },
}
